<Window x:Class="Zadanie_4.InterfejsGrupy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_4"
        mc:Ignorable="d"
        Title="InterfejsGrupy" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock
            Text="{Binding XPath=szczegóły/nazwa}"
        />
        <ListBox
            Grid.Row="1"
            Name="Pojazdy"
            ItemsSource="{Binding XPath=auto}"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding XPath=opismarki}"
                    />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button
            Grid.Row="2" Click="Widok"
        >
            Szczegóły
        </Button>
    </Grid>
</Window>
